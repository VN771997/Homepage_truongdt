    </div>
    <div class="div_music">
      <h2 style="color:white;">DANH SÁCH NHẠC CHỌN LỌC:</h2>
      <div id="id_divclass_listAlbum">
      <div class="class_listAlbum" id="id_listAlbum">
      </div>
      </div>

     <h2 id="nameAlbum">Album playing: </h2>

      <div class="music-container" id="music-container">
      <div class="music-info">
        <h4 id="title"></h4>
        <div class="progress-container" id="progress-container">
          <div class="progress" id="progress" style="width: 88.2027%;"></div>
        </div>
        <h4 id="currTime"></h4>
